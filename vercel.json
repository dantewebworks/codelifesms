{
  "builds": [
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/", "dest": "public/sms-dashboard-fixed.html" },
    { "src": "/(.*)", "dest": "public/$1" }
  ],
  "functions": {
    "api/webhook.js": { "maxDuration": 10 },
    "api/messages.js": { "maxDuration": 5 }
  }
}
